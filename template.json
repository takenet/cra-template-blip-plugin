{
    "package": {
        "name": "blip-plugin-template",
        "version": "0.1.7",
        "author": {
            "name": "Axel Douglas Santos",
            "email": "axel.santos@take.net"
        },
        "private": true,
        "dependencies": {
            "axios": "^0.21.1",
            "blip-ds": "^1.111.4",
            "blip-toolkit": "^5.21.2",
            "classnames": "^2.3.1",
            "formik": "^2.2.6",
            "iframe-message-proxy": "^1.1.1",
            "lime-js": "^3.0.1",
            "prop-types": "^15.7.2",
            "react": "^17.0.2",
            "react-dom": "^17.0.2",
            "react-router-dom": "^5.2.0",
            "react-scripts": "4.0.3",
            "replace-in-file": "^6.2.0",
            "resize-observer": "^1.0.0",
            "sass": "^1.35.1",
            "swr": "^0.5.5",
            "tachyons": "^4.12.0",
            "yup": "^0.32.9"
        },
        "scripts": {
            "start": "react-scripts start",
            "build": "react-scripts build",
            "eject": "react-scripts eject",
            "config:plugin": "cross-env REACT_APP_NAME=$npm_package_name node src/config/scripts/plugin-config.js",
            "test": "jest",
            "test:watch": "npm test -- --watch",
            "test:coverage": "jest --coverage",
            "test:clear": "jest --clearCache",
            "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
            "lint": "eslint src/**/*.{js,jsx,ts,tsx}"
        },
        "jest": {
            "collectCoverage": true,
            "collectCoverageFrom": [
                "src/**/*.{js,jsx,ts,tsx}",
                "!**/node_modules/**"
            ],
            "coverageDirectory": "<rootDir>/coverage/",
            "testResultsProcessor": "jest-sonar-reporter",
            "testEnvironment": "jest-environment-jsdom-sixteen",
            "testTimeout": 30000,
            "transform": {
                "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
                "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/src/config/jest/fileTransform.js"
            },
            "transformIgnorePatterns": [
                "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
                "^.+\\.module\\.(css|sass|scss)$"
            ],
            "coverageThreshold": {
                "global": {
                    "lines": 20
                }
            },
            "coveragePathIgnorePatterns": [
                "<rootDir>/src/App.js",
                "<rootDir>/src/index.js",
                "<rootDir>/src/config/",
                "<rootDir>/src/factory/",
                "<rootDir>/src/hooks/",
                "<rootDir>/src/routes/",
                "<rootDir>/src/services/",
                "<rootDir>/src/store/",
                "<rootDir>/src/utils/"
            ]
        },
        "babel": {
            "presets": ["react-app"],
            "env": {
                "production": {
                    "plugins": [
                        [
                            "react-remove-properties",
                            {
                                "properties": [
                                    "data-test",
                                    "data-testid"
                                ]
                            }
                        ]
                    ]
                }
            }
        },
        "eslintConfig": {
            "extends": ["react-app", "react-app/jest"]
        },
        "browserslist": {
            "production": [">0.2%", "not dead", "not op_mini all"],
            "development": [
                "last 1 chrome version",
                "last 1 firefox version",
                "last 1 safari version"
            ]
        },
        "devDependencies": {
            "@babel/preset-react": "^7.13.13",
            "@testing-library/jest-dom": "^5.11.10",
            "@testing-library/react": "^11.2.6",
            "@testing-library/user-event": "^13.1.1",
            "babel-plugin-react-remove-properties": "^0.3.0",
            "cross-env": "^7.0.3",
            "eslint": "^7.23.0",
            "eslint-config-airbnb": "^18.2.1",
            "eslint-config-airbnb-base": "^14.2.1",
            "eslint-config-prettier": "^8.1.0",
            "eslint-config-react-app": "^6.0.0",
            "eslint-plugin-import": "^2.22.1",
            "eslint-plugin-jsx-a11y": "^6.4.1",
            "eslint-plugin-prettier": "^3.3.1",
            "eslint-plugin-react": "^7.23.2",
            "eslint-plugin-react-hooks": "^4.2.0",
            "jest-environment-jsdom-sixteen": "^1.0.3",
            "jest-sonar-reporter": "^2.0.0",
            "prettier": "^2.2.1"
        }
    }
}
